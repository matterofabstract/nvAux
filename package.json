{
  "name": "nvaux",
  "version": "0.1.3",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "description": "A personal tool for your professional lifestyle",
  "scripts": {
    "start": "BROWSER=none rescripts start",
    "build": "rescripts build",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "test": "rescripts test",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder -m"
  },
  "dependencies": {
    "chokidar": "^3.3.1",
    "electron-store": "^5.1.1",
    "electron-updater": "^4.2.5",
    "fdir": "^2.1.0",
    "mousetrap": "^1.6.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.9.0",
    "react-resizable": "^1.10.1",
    "react-scripts": "3.4.1",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.14",
    "@rescripts/rescript-env": "^0.0.12",
    "concurrently": "^5.1.0",
    "electron": "^8.5.2",
    "electron-builder": "^22.4.1",
    "electron-devtools-installer": "^3.0.0",
    "electron-rebuild": "^1.10.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": {
    "name": "Abstractly, LLC",
    "email": "services@abstractly.io",
    "url": "https://nvaux.com"
  },
  "build": {
    "appId": "com.abstractly.nvaux",
    "productName": "nvAux",
    "copyright": "Copyright Â© 02020 ${author}",
    "publish": [
      {
        "provider": "github",
        "owner": "matterofabstract",
        "repo": "nvAux",
        "private": false
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "dmg": {
      "background": "assets/background.tiff",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
